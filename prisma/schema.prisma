generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model cliente {
  id        Int      @id @default(autoincrement())
  nombre    String
  email     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reserva reserva[]
}

model habitacion {
  id          Int      @id @default(autoincrement())
  numero      Int
  tipo        String
  precio      Float
  descripcion String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  reserva reserva[]
}

model reserva {
  id           Int       @id @default(autoincrement())
  clienteId    Int
  habitacionId Int
  checkIn      DateTime
  checkOut     DateTime?
  finalizada   Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  cliente    cliente    @relation(fields: [clienteId], references: [id])
  habitacion habitacion @relation(fields: [habitacionId], references: [id])
}
